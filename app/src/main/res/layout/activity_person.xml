<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@+id/adView_person"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/person_toolbar"
                android:background="@color/colorPrimaryDark"
                app:titleTextColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">
            </androidx.appcompat.widget.Toolbar>
            <LinearLayout
                android:background="#E9E9E9"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/person_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                tools:context=".detail.person.PersonActivity">
                <ImageView
                    android:id="@+id/person_profile"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:layout_width="140dp"
                    android:layout_height="200dp"/>
<!--                <TextView-->
<!--                    android:id="@+id/person_name"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textColor="#000000"-->
<!--                    android:textStyle="bold"-->
<!--                    android:text="이름"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"/>-->
            </LinearLayout>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="6dp"
                android:text="출연작품 (Filmography)"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/person_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:layout_alignParentBottom="true"
            android:id="@+id/adView_person"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1646409874287424/1585126093"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</layout>

